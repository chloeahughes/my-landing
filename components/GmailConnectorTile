'use client';

import Link from 'next/link';

export function GmailConnectorTile({ connected }: { connected: boolean }) {
  return (
    <div className="rounded-2xl border p-5 flex items-start justify-between">
      <div>
        <h3 className="text-lg font-semibold">Gmail</h3>
        <p className="text-sm text-gray-500">
          Auto-ingest deal emails and keep properties updated.
        </p>
      </div>

      {connected ? (
        <button className="rounded-lg bg-green-600 px-4 py-2 text-white" disabled>
          Connected
        </button>
      ) : (
        <Link
          href="/api/email/connect/google"
          className="rounded-lg bg-black px-4 py-2 text-white"
        >
          Connect
        </Link>
      )}
    </div>
  );
}
